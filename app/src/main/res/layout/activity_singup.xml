<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users_activities.Singup"
    android:background="@drawable/b2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="sing up"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_margin="15dp"/>


    <RelativeLayout
        android:id="@+id/progresser"
        android:layout_margin="15dp"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="10dp">
        <FrameLayout
            android:id="@+id/middle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"/>
        <RelativeLayout
            android:layout_toLeftOf="@id/middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/middle2"
                android:layout_width="0dp"
                android:layout_centerHorizontal="true"
                android:layout_height="0dp"></FrameLayout>

            <FrameLayout
                android:id="@+id/prog1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/middle2"/>

            <FrameLayout
                android:id="@+id/prog2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/middle2"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@id/middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/middle3"
                android:layout_width="0dp"
                android:layout_centerHorizontal="true"
                android:layout_height="0dp"></FrameLayout>

            <FrameLayout
                android:id="@+id/prog3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/middle3"/>

            <FrameLayout
                android:id="@+id/prog4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/middle3"/>

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="choose your user name"
        android:gravity="center"
        android:layout_below="@id/progresser"/>

    <EditText
        android:id="@+id/fakeData"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/order"
        android:layout_marginStart="15dp"
        android:hint=""
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text1"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="#dddddd"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dataText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/order"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text1"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="#dddddd"
        android:textSize="20dp" />


    <Button
        android:visibility="invisible"
        android:id="@+id/moveBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/dataText"
        android:layout_margin="15dp"
        android:onClick="moveBack"
        android:background="@drawable/button1"
        android:foreground="?attr/homeAsUpIndicator" />

    <Button
        android:visibility="invisible"
        android:id="@+id/moveForward"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="moveForward"
        android:layout_below="@id/dataText"
        android:layout_alignParentRight="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button1"
        android:foreground="?attr/homeAsUpIndicator"
        android:rotation="180" />

    <TextView
        android:id="@+id/orderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dataText"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="90dp"
        android:gravity="center"
        android:text="length of 5"
        android:textColor="#ff0000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderText"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="90dp"
        android:gravity="center"
        android:text="no special characters"
        android:textColor="#00ff00"
        android:textSize="15dp"
        android:textStyle="bold" />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="sing in"
        android:textSize="22.5dp"
        android:onClick="singInC"
        android:background="@drawable/button1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-30dp"/>

</RelativeLayout>